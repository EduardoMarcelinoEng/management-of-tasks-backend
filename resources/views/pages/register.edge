<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @vite(['resources/css/register.css', 'resources/js/register.js'])
</head>
<body>
    <div class="center">
        <div class="content-center">
            <form>
                <h2>Nova conta</h2>
                <div class="form-group mb-3">
                    <label for="inputEmail">E-mail</label>
                    <input type="email" class="form-control shadow-none" id="inputEmail" aria-describedby="emailHelp" placeholder="Digite o seu e-mail">
                </div>
                <div class="form-group mb-3">
                    <label for="inputName">Nome</label>
                    <input type="text" class="form-control shadow-none" id="inputName" aria-describedby="emailHelp" placeholder="Digite o seu nome">
                </div>
                <div class="form-group mb-3">
                    <label for="inputPassword">Senha</label>
                    <input type="password" class="form-control shadow-none" id="inputPassword" placeholder="Digite a sua senha">
                </div>
                <div class="form-group mb-3">
                    <label for="inputRepeatPassword">Repita a senha</label>
                    <input type="password" class="form-control shadow-none" id="inputRepeatPassword" placeholder="Repita a sua senha">
                </div>
                <button type="submit" class="btn btn-primary">Criar</button>
                <div class="link">
                    <a href="/login">Login</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>